<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/round_medium"
    app:cardElevation="@dimen/margin_padding_small"
    app:cardUseCompatPadding="true">

    <com.factor.bouncy.BouncyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/w_45"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/margin_padding_medium"
                    android:text="@string/warning"
                    android:textSize="@dimen/txt_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvClose"
                    android:layout_width="@dimen/w_45"
                    android:layout_height="@dimen/w_45"
                    android:gravity="center"
                    android:text="@string/x"
                    android:textSize="@dimen/txt_larger"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_padding_medium"
                android:textSize="@dimen/txt_medium"
                tools:text="Message" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE" />

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_padding_medium"
                android:paddingVertical="@dimen/margin_padding_small"
                android:text="@string/yes"
                android:textSize="@dimen/txt_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE" />

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_padding_medium"
                android:paddingVertical="@dimen/margin_padding_small"
                android:text="@string/no"
                android:textSize="@dimen/txt_medium" />
        </LinearLayout>
    </com.factor.bouncy.BouncyNestedScrollView>

</androidx.cardview.widget.CardView>
