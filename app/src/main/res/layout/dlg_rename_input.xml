<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/round_large"
    app:cardElevation="@dimen/margin_padding_small"
    app:cardUseCompatPadding="true">

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="App Name"
        android:background="@color/transparent"
        android:gravity="center"
        android:hint="@string/space"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:padding="@dimen/margin_padding_medium"
        android:paddingLeft="@dimen/margin_padding_medium"
        android:paddingRight="@dimen/margin_padding_medium"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@drawable/cursor"
        android:textIsSelectable="false"
        android:textSelectHandle="@drawable/bkg_edit_text_select_handle"
        android:textSelectHandleLeft="@drawable/bkg_edit_text_select_handle"
        android:textSelectHandleRight="@drawable/bkg_edit_text_select_handle"
        android:textSize="20sp" />

</androidx.cardview.widget.CardView>
