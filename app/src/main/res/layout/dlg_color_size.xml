<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/round_medium"
    app:cardElevation="@dimen/margin_padding_small"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_medium">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_for_this_entry"
            android:textSize="@dimen/txt_large"
            android:textStyle="bold" />

        <com.launcher.views.colorSeekBar.ColorSeekBar
            android:id="@+id/colorSlider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium"
            app:colorSeeds="@array/material_colors1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/margin_padding_medium"
                android:paddingRight="@dimen/margin_padding_medium"
                android:text="@string/sym_minus"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/margin_padding_medium"
                android:paddingRight="@dimen/margin_padding_medium"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/margin_padding_medium"
                android:paddingRight="@dimen/margin_padding_medium"
                android:text="@string/sym_plus"
                android:textSize="42sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
