<?xml version="1.0" encoding="utf-8"?>
<EditText xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ed_input"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:autofillHints="App Name"
    android:background="@drawable/bkg_edit_text"
    android:gravity="center"
    android:hint=""
    android:imeOptions="actionDone"
    android:inputType="textPersonName"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:textColor="@android:color/black"
    android:textCursorDrawable="@drawable/cursor"
    android:textIsSelectable="false"
    android:textSelectHandle="@drawable/bkg_edit_text_select_handle"
    android:textSelectHandleLeft="@drawable/bkg_edit_text_select_handle"
    android:textSelectHandleRight="@drawable/bkg_edit_text_select_handle"
    android:textSize="20sp" />
