<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/round_medium"
    app:cardElevation="@dimen/margin_padding_small"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_padding_medium"
                android:text="@string/alignment"
                android:textSize="@dimen/txt_large"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE" />

            <TextView
                android:id="@+id/menuStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_padding_medium"
                android:paddingTop="@dimen/margin_padding_small"
                android:paddingBottom="@dimen/margin_padding_small"
                android:text="@string/start"
                android:textSize="@dimen/txt_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE" />

            <TextView
                android:id="@+id/menuCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_padding_medium"
                android:paddingTop="@dimen/margin_padding_small"
                android:paddingBottom="@dimen/margin_padding_small"
                android:text="@string/center"
                android:textSize="@dimen/txt_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE" />

            <TextView
                android:id="@+id/menuEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_padding_medium"
                android:paddingTop="@dimen/margin_padding_small"
                android:paddingBottom="@dimen/margin_padding_small"
                android:text="@string/end"
                android:textSize="@dimen/txt_medium" />
        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>
