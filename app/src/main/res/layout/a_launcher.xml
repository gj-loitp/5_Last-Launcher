<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.launcher.views.flowLayout.FlowLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal" />

    </ScrollView>

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/round_medium"
        app:cardElevation="@dimen/margin_padding_small"
        app:cardUseCompatPadding="true"
        tools:visibility="visible">

        <EditText
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/transparent"
            android:drawableStart="@drawable/baseline_search_black_48"
            android:drawablePadding="@dimen/margin_padding_small"
            android:foregroundGravity="center"
            android:hint="@string/search"
            android:imeOptions="actionDone|actionSend"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_padding_small"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_medium" />
    </androidx.cardview.widget.CardView>

</FrameLayout>
