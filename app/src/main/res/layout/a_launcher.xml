<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.launcher.views.flowLayout.FlowLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal" />

    </ScrollView>

    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@drawable/bkg_search_box"
        android:drawableStart="@drawable/baseline_search_black_48"
        android:drawablePadding="@dimen/margin_padding_small"
        android:foregroundGravity="center"
        android:hint="@string/search"
        android:imeOptions="actionDone|actionSend"
        android:inputType="textPersonName"
        android:padding="@dimen/margin_padding_small"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>
