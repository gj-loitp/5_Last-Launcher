<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.factor.bouncy.BouncyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.launcher.views.flowLayout.FlowLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal" />

    </com.factor.bouncy.BouncyNestedScrollView>

    <TextView
        android:id="@+id/tvNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/margin_padding_medium"
        android:text="@string/no_data"
        android:textSize="@dimen/txt_medium"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/round_large"
        app:cardElevation="@dimen/margin_padding_small"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/fl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <ImageView
                android:id="@+id/iv_setting_global"
                android:layout_width="@dimen/w_56"
                android:layout_height="@dimen/w_56"
                android:layout_gravity="center|start"
                android:background="@color/transparent"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/margin_padding_medium"
                android:src="@drawable/baseline_settings_suggest_black_48" />

            <EditText
                android:id="@+id/search_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_56"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/w_56"
                android:layout_marginEnd="@dimen/w_56"
                android:autofillHints=""
                android:background="@color/transparent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="@string/search"
                android:imeOptions="actionDone|actionSend"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_padding_small"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_medium" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_icon_search"
            android:layout_width="@dimen/w_56"
            android:layout_height="@dimen/w_56"
            android:layout_gravity="center|end"
            android:background="@color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/margin_padding_medium"
            android:src="@drawable/baseline_search_black_48" />
    </androidx.cardview.widget.CardView>

</FrameLayout>
